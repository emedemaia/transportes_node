<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">

<div class="mb-3 row">
                <div class="col-sm-10 col-lg-4 col-xl-5">
                    <input type="text" class="form-control" id="inputTitulo" name="titulo" placeholder="Título">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10 col-lg-4 col-xl-5">
                    <textarea class="form-control"  name="subtitulo" placeholder="Subtítulo"  rows="5"></textarea>
                </div>
            </div>

               <div class="mb-3 row" >
                <div class="col-sm-10 col-lg-4 col-xl-5">
                    <textarea class="form-control"  name="cuerpo" placeholder="Cuerpo" rows="5"></textarea>
                </div>
            </div>
            
{{#if error}}
<p style="color:red;">
    {{message}}
    </p>{{/if}}
<button type="submit" class="btn btn-primary">Grabar</button>
<a href="/admin/novedades" class="btn btn-danger">Regresar</a>

            </form>
        </div>
    </div>
</div>

<script>
    $("#textarea-form").YellowText();
</script>
